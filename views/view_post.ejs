<% title = "Blog | " + post.title %>
<div class="container">
    <h1><%= post.title %></h1>
    <p><small class="text-muted">By <%= post.author?.name || "Unknown" %> - <%= post.createdAt %></small></p>
    <p><%= post.content %></p>
    <hr>
    <div class="mt-3">
        <a href="/" class="btn btn-sm btn-primary">Back to feed</a>
    </div>
</div>